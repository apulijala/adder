pipeline {
    agent{
        label "docker"
    }
    stages {
        stage("Running some command") {
            steps{
                echo "========executing A========"
                script {

                    def answer = input message : "Is this Input Message ? ",
                            parameters : [
                                booleanParam(defaultValue : true, 
                                    description : "Prerelease setting", name : "prerelease"
                                )
                            ]
                    echo "${answer}"
                }
                
                
            }
        } 
        stage('run-parallel-branches') {
            agent {
                label "docker"
            }
            steps {
                
                script {
                   def choice = input message : "Choice Input Message ? ", 
                        parameters : [
                            choice(
                                choices: "choice1\nchoice2\nchoice3\nchoice4\n", 
                                description : "Choose an option", name : "Options"
                            )
                        ]
                    println(choice)
                }

                parallel(
                    a: {
                        echo "Parallel Branch A"
                    },

                    b: {
                        echo "Parllel Branch B and B"
                    }
                )
            }
        }
    }
}